<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/layout"
    tools:context="com.project.naveen.lcrm.opportunities.DetailsFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:text="Invoice Number"
                android:textSize="20sp"
                android:textColor="#000000"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.1"
                android:textSize="20sp"
                android:textColor="#000"
                android:textStyle="bold"
                android:layout_height="wrap_content"
                android:text=":"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:id="@+id/invoice_number"
                android:textSize="20sp"
                android:textColor="#263238"
                />


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:text="Payment Received"
                android:textSize="20sp"
                android:textColor="#263238"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.1"
                android:textSize="20sp"
                android:textColor="#000"
                android:textStyle="bold"
                android:layout_height="wrap_content"
                android:text=":"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:id="@+id/pay_received"
                android:textSize="20sp"
                android:textColor="#263238"
                />


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:text="Payment method"
                android:textSize="20sp"
                android:textColor="#000000"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.1"
                android:textSize="20sp"
                android:textColor="#000"
                android:textStyle="bold"
                android:layout_height="wrap_content"
                android:text=":"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:id="@+id/pay_method"
                android:textSize="20sp"
                android:textColor="#263238"
                />


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:text="Payment Date"

                android:textSize="20sp"
                android:textColor="#000000"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.1"
                android:textSize="20sp"
                android:textColor="#000"
                android:textStyle="bold"
                android:layout_height="wrap_content"
                android:text=":"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:textSize="20sp"
                android:id="@+id/pay_date"
                android:textColor="#263238"
                />


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:text="Payment Number"

                android:textSize="20sp"
                android:textColor="#000000"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.1"
                android:textSize="20sp"
                android:textColor="#000"
                android:textStyle="bold"
                android:layout_height="wrap_content"
                android:text=":"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:id="@+id/pay_number"
                android:textSize="20sp"
                android:textColor="#263238"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:text="Customer"

                android:textSize="20sp"
                android:textColor="#000000"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.1"
                android:textSize="20sp"
                android:textColor="#000"
                android:textStyle="bold"
                android:layout_height="wrap_content"
                android:text=":"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:id="@+id/customer"
                android:text=""
                android:textSize="20sp"
                android:textColor="#263238"
                />


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:text="SalesPerson"

                android:textSize="20sp"
                android:textColor="#000000"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.1"
                android:textSize="20sp"
                android:textColor="#000"
                android:textStyle="bold"
                android:layout_height="wrap_content"
                android:text=":"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:id="@+id/salesperson"
                android:text=""
                android:textSize="20sp"
                android:textColor="#263238"
                />


        </LinearLayout>


    </LinearLayout>

</FrameLayout>
