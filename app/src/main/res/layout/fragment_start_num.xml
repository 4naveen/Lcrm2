<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/coordinator"
    android:layout_height="match_parent"
    android:layout_marginTop="65dp"
   >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/q_prefix"
                android:singleLine="true"
                android:hint="Quotation Prefix"/>
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/qStartNumber"
                android:singleLine="true"
                android:inputType="number"
                android:hint="Quotation start number"/>
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_max_upload_amt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <com.weiwangcn.betterspinner.library.BetterSpinner
                android:id="@+id/quotation_template"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Quotation tenmplate" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/sales_prefix"
                android:singleLine="true"
                android:hint="Sales prefix"/>
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/sales_start_number"
                android:singleLine="true"
                android:inputType="number"
                android:hint="Sales Start Number"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <com.weiwangcn.betterspinner.library.BetterSpinner
                android:id="@+id/salesorder_template"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="SalesOrder tenmplate" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/invoice_prefix"
                android:singleLine="true"
                android:hint="Invoice prefix"/>
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/invoice_start_number"
                android:singleLine="true"
                android:inputType="number"
                android:hint="Invoice Start Number"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <com.weiwangcn.betterspinner.library.BetterSpinner
                android:id="@+id/invoice_template"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Invoice tenmplate" />
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/invoice_pay_prefix"
                android:singleLine="true"
                android:hint="Invoice Payment prefix"/>
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/invoice_pay_start_number"
                android:singleLine="true"
                android:hint="invoice payment start number"/>
        </android.support.design.widget.TextInputLayout>
    </LinearLayout>
</android.support.design.widget.CoordinatorLayout>
