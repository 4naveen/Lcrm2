<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
         android:layout_width="match_parent"
        android:layout_height="match_parent">

    <ImageView
        android:id="@+id/profile_cover_image"
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:scaleType="centerCrop"
        android:src="@drawable/profile_header_back" />
    <de.hdodenhof.circleimageview.CircleImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/profile_image"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:src="@drawable/user"
                     android:scaleType="centerCrop"
                    android:layout_gravity="center"
                    android:layout_centerHorizontal="true"
                     android:elevation="5dp"
                    android:padding="20dp"
                    android:layout_marginTop="-110dp"
                    app:civ_border_width="2dp"
                    app:civ_border_color="#fff"/>

    <android.support.v7.widget.CardView
                    android:id="@+id/cv"
                    android:layout_marginTop="20dp"
                    android:layout_width="450dp"
                    android:layout_height="300dp"
                    android:layout_gravity="center"
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    card_view:cardCornerRadius="0dp"
                    card_view:cardElevation="5dp"
                    card_view:cardBackgroundColor="#fff"
                    card_view:cardUseCompatPadding="true">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical">
    <ToggleButton
        android:id="@+id/togglebutton"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:textOn=""
        android:textOff=""
        android:layout_gravity="end"
        android:background="@mipmap/ic_create_black_36dp"
        android:onClick="onToggleClicked"
        />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:id="@+id/layout_firstName"
                    android:layout_marginTop="10dp"
                    >
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="0.3"
                        android:layout_height="wrap_content"
                         android:layout_marginStart="50dp"
                        android:layout_marginLeft="50dp"
                        android:text="First Name"
                        android:textSize="20sp"
                       />
                    <EditText
                        android:layout_width="0dp"
                        android:layout_weight="0.3"
                        android:layout_height="wrap_content"
                        android:id="@+id/first_name"
                        android:text="Seenu"
                        android:inputType="text|textNoSuggestions"
                        android:singleLine="true"
                        android:background="@null"
                        android:textSize="20sp"
                        android:focusable="false"
                        android:clickable="false"
                         />
                </LinearLayout>
                <LinearLayout
                           android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                      android:id="@+id/layout_lastName"
                    android:orientation="horizontal"
                  >
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="0.3"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="50dp"
                        android:layout_marginLeft="50dp"
                        android:text="Last Name"

                        android:textSize="20sp"
                        />
                    <EditText
                        android:layout_width="0dp"
                        android:layout_weight="0.3"
                        android:paddingTop="2dp"
                        android:layout_height="wrap_content"
                        android:focusable="false"
                        android:clickable="false"
                        android:text="Vas"
                        android:inputType="text|textNoSuggestions"
                        android:singleLine="true"
                        android:background="@null"
                        android:id="@+id/last_name"
                        android:textSize="20sp"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                       android:id="@+id/layout_email"
                    >
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="0.3"
                        android:layout_height="wrap_content"
                        android:text="Email"
                        android:layout_marginStart="50dp"
                        android:layout_marginLeft="50dp"
                        android:textSize="20sp"
                        />
                    <EditText
                        android:layout_width="0dp"
                        android:layout_weight="0.3"
                        android:layout_height="wrap_content"
                        android:id="@+id/email"
                        android:background="@null"
                        android:paddingTop="2dp"
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:inputType="text|textNoSuggestions"
                        android:text="admin@crm.com"
                        android:textSize="20sp"
                        android:focusable="false"
                        android:clickable="false"
                         />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:id="@+id/layout_phone"     >
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="0.3"
                        android:layout_height="wrap_content"
                        android:text="Phone"
                        android:layout_marginStart="50dp"
                        android:layout_marginLeft="50dp"
                        android:textSize="20sp"
                        />
                    <EditText
                        android:layout_width="0dp"
                        android:layout_weight="0.3"
                        android:layout_height="wrap_content"
                        android:id="@+id/phone"
                        android:singleLine="true"
                        android:background="@null"
                        android:paddingTop="2dp"
                        android:inputType="text|textNoSuggestions"
                        android:text="061276876989"
                        android:focusable="false"
                        android:clickable="false"
                        android:textSize="20sp"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:id="@+id/layout_role"                  >
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="0.3"
                        android:layout_height="wrap_content"
                        android:text="Role"
                        android:layout_marginStart="50dp"
                        android:layout_marginLeft="50dp"
                        android:textSize="20sp"
                        />
                    <EditText
                        android:layout_width="0dp"
                        android:layout_weight="0.3"
                        android:layout_height="wrap_content"
                        android:id="@+id/role"
                        android:text="admin"
                        android:paddingTop="2dp"
                        android:singleLine="true"
                        android:background="@null"
                        android:inputType="text|textNoSuggestions"
                        android:focusable="false"
                        android:clickable="false"
                        android:textSize="20sp"
                        />
                </LinearLayout>


