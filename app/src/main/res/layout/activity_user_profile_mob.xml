<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
         android:layout_width="match_parent"
        android:layout_height="match_parent">

    <ImageView
        android:id="@+id/header_cover_image"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:src="@drawable/profile_header_back" />
    <de.hdodenhof.circleimageview.CircleImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/profile_image"
                    android:layout_width="160dp"
                    android:layout_height="160dp"
                    android:src="@drawable/user"
                     android:scaleType="centerCrop"
                    android:layout_gravity="center"
                    android:layout_centerHorizontal="true"
                     android:elevation="5dp"
                    android:padding="20dp"
                    android:layout_marginTop="-85dp"
                    app:civ_border_width="2dp"
                    app:civ_border_color="#fff"/>

    <android.support.v7.widget.CardView
                    android:id="@+id/cv"
                    android:layout_marginTop="10dp"
                    android:layout_width="340dp"
                    android:layout_height="200dp"
                    android:layout_gravity="center"
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    card_view:cardCornerRadius="0dp"
                    card_view:cardElevation="5dp"
                    card_view:cardBackgroundColor="#fff"
                    card_view:cardUseCompatPadding="true">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="5dp"
    android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="5dp"
                    >
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="0.3"
                        android:layout_height="wrap_content"
                         android:layout_marginStart="30dp"
                        android:layout_marginLeft="30dp"
                        android:text="First Name"
                        android:textSize="20sp"
                       />
                    <TextView

                        android:layout_width="0dp"
                        android:layout_weight="0.4"
                        android:layout_height="wrap_content"
                        android:id="@+id/first_name"
                        android:text="Seenu"
                        android:textSize="20sp"
                         />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                  >
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="0.3"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="30dp"
                        android:layout_marginLeft="30dp"
                        android:text="Last Name"

                        android:textSize="20sp"
                        />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="0.4"
                        android:layout_height="wrap_content"

                        android:text="Vas"
                        android:id="@+id/last_name"
                        android:textSize="20sp"
                        />


                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"

                    >
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="0.3"                        android:layout_height="wrap_content"
                        android:text="Email"
                        android:layout_marginStart="30dp"
                        android:layout_marginLeft="30dp"
                        android:textSize="20sp"
                        />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="0.4"                        android:layout_height="wrap_content"
                        android:id="@+id/email"
                        android:text="admin@crm.com"
                        android:textSize="20sp"
                         />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                                     >
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="0.3"
                        android:layout_height="wrap_content"
                        android:text="Phone"
                        android:layout_marginStart="30dp"
                        android:layout_marginLeft="30dp"
                        android:textSize="20sp"
                        />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="0.4"
                        android:layout_height="wrap_content"
                        android:id="@+id/phone"
                        android:text="061276876989"
                        android:textSize="20sp"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                                      >
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="0.3"
                        android:layout_height="wrap_content"
                        android:text="Role"
                        android:layout_marginStart="30dp"
                        android:layout_marginLeft="30dp"
                        android:textSize="20sp"
                        />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="0.4"
                        android:layout_height="wrap_content"
                        android:id="@+id/role"
                        android:text="admin"
                        android:textSize="20sp"
                        />
                </LinearLayout>
</LinearLayout>

    </android.support.v7.widget.CardView>
    </LinearLayout>

