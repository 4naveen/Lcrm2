<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="350dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginBottom="23dp"
    android:layout_marginTop="8dp"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="New Opportunity Meeting"
        android:textColor="#212121"
        android:textSize="25sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/text_start_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.7">

            <EditText
                android:id="@+id/start_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Start Date"
                android:singleLine="true" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/text_start_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.3">

            <EditText
                android:id="@+id/start_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="StartTime"
                android:singleLine="true" />
        </android.support.design.widget.TextInputLayout>
</LinearLayout>

<LinearLayout
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:orientation="horizontal">
<android.support.design.widget.TextInputLayout
    android:id="@+id/input_layout_end_date"
    android:layout_width="0dp"
    android:layout_weight="0.7"
    android:layout_height="wrap_content">

    <EditText
        android:id="@+id/end_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="End Date"
        android:singleLine="true" />
</android.support.design.widget.TextInputLayout>

<android.support.design.widget.TextInputLayout
    android:id="@+id/input_layout_end_time"
    android:layout_width="0dp"
    android:layout_weight="0.3"
    android:layout_height="wrap_content">

    <EditText
        android:id="@+id/end_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="EndTime"
        android:singleLine="true" />
</android.support.design.widget.TextInputLayout>
</LinearLayout>

<android.support.design.widget.TextInputLayout
android:id="@+id/input_layout_meeting_subject"
android:layout_width="match_parent"
android:layout_height="wrap_content">
<EditText
    android:id="@+id/meeting_subject"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textColor="#000"
    android:textSize="20sp"
    android:hint="Meeting Subject"
    android:inputType="textEmailAddress" />
</android.support.design.widget.TextInputLayout>
 <LinearLayout
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:orientation="horizontal"
android:layout_marginTop="30dp">

<Button
    android:layout_width="100dp"
    android:layout_height="wrap_content"
    android:id="@+id/cancel"
    android:text="Cancel"
    android:textColor="#FF6E40"
    android:layout_marginStart="45dp"
    android:layout_marginLeft="45dp"
    android:textSize="18sp" />

<Button
    android:layout_width="100dp"
    android:layout_height="wrap_content"
    android:id="@+id/submit"
    android:text="Submit"
    android:textColor="@color/colorPrimary"
    android:layout_marginStart="30dp"
    android:layout_marginLeft="30dp"
    android:textSize="18sp" />
</LinearLayout>
</LinearLayout>